@model  PaymentRecordDetailViewmodel

@{ ViewBag.Title = "Payslip";}

<div class="row">
    <div class="col-md-12 ">
        <div class="card">
            <div class="card-body">
                <div class="container-fluid d-flex justify-content-between">
                    <div class="col-md-3">
                        <p class="mt-5 mb-2"><b>Payroll App</b></p>
                        <p>11 Alagomeji road<br /> Lagos<br /></p>
                    </div>
                    <div class="col-md-3 pr-0">
                        <p class="mt-5 mb-2 text-right" ><b>Pay Date: @Model.PayDate.ToString("dd/MM/yy")</b></p>
                        <p class="text-right">Tax Code: @Model.TaxCode<br />Year: @Model.Year<br /></p>
                    </div>

                </div><br/><br/>
                           <div class="col-md-12 row">
                               <div class="col-md-8"><h5>Employees Name: @Model.FullName</h5></div>
                               <div class="col-md-8"><h5>Insurance Number: @Model.I_No</h5></div>
                           </div>
            </div>
            <div class="row">
                <div class="col-md-12 table-responsive-md">
                    <table class="table table-striped">
                        <thead class="table-dark">
                            <tr>
                                <th>Earnings</th>
                                <th>Hours</th>
                                <th>Rates</th>
                                <th>Amount</th>
                                <th>Deductions</th>
                                <th>Amount</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td><b>Basic : </b></td>
                                <td>@Model.ContractualHours.ToString("f")</td>
                                <td>@Model.HourlyRate.ToString("f")</td>
                                <td>@Model.ContractualEarning.ToString("C")</td>
                                <td><b>Tax : </b></td>
                                <td>@Model.Tax.ToString("f")</td>
                            </tr>
                            <tr>
                                <td><b>Overtime : </b></td>
                                <td>@Model.OverTimeHours.ToString("f")</td>
                                <td>@Model.OverTimeEarning.ToString("f2")</td>
                                <td>@Model.ContractualEarning.ToString("C")</td>
                                <td><b>Insurance : </b></td>
                                <td>@Model.I_No.ToString("f")</td>
                            </tr>
                            <tr>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td><b>UNION  : </b></td>
                                <td>@Model.UnionFee.Value.ToString("C")</td>
                            </tr>
                            <tr>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td><b>SLC : </b></td>
                                <td>@Model.SLC.Value.ToString("C")</td>
                            </tr>
                            <tr>
                                <td><b> Total : </b></td>
                                <td>@Model.HoursWorked.ToString("f")</td>
                                <td></td>
                                <td>@Model.TotalEarnings.ToString("C")</td>
                                <td></td>
                                <td>@Model.TotalDeductions.ToString("C")</td>
                            </tr>
                        </tbody>
                        <tfoot>
                            <tr>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td class="table-dark"><b> NET PAY : </b></td>
                                <td class="table-dark">@Model.NetPayment.ToString("C")</td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>


</div>
