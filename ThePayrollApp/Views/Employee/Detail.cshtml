@model EmployeeDetailViewmodel

<div class="col-md-12">
    <div class="card">
        <div class="card-body">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index">Employee List</a></li>
                    <li class="breadcrumb-item active" aria-controls="page">Employee Detail</li>
                </ol>
            </nav>
            <br /><br />
            <div class="flex-wrap d-flex justify-content-start justify-content-sm-center wrap">
                <img class="rounded-circle shadow-lg " style="width:300px; height:350px" src="@Url.Content(Model.ImageUrl)" alt="" />
                <div class="wrap align-items-center ml-5">
                    <p class="font-weight-bold text-success " style="font-size:20px">@Model.FullName</p>
                    <p class="font-weight-normal">@Model.Designation</p>
                    <p class="font-weight-normal ">@Model.Gender</p>
                    <p class="font-weight-normal ">@Model.DOB.ToString("dd/MM/yyyy")</p>
                    <p class="font-weight-normal ">@Model.EmpNo</p>
                    <p class="font-weight-normal ">@Model.InsuranceNo</p>
                    <p class="font-weight-normal ">Email: <a href=" #">@Model.Email</a></p>
                    <p class="font-weight-normal ">Phone Number: <a href="@Model.PhoneNumber">@Model.PhoneNumber</a></p>
                    <br /> <br />
                    <p class="font-weight-bold"> Pay & Deductions </p>
                    <hr style="background-color: crimson" />
                    <p class="font-weight-normal">Payment Method: @Model.PaymentMethod</p>
                    <p class="font-weight-normal">Student Loan: @Model.StudentLoan</p>
                    <p class="font-weight-normal">Union Member: @Model.UnionMember</p>
                    <p class="font-weight-normal"><i class="fas fa-envelope" style="margin-right:0.6cm; color:cornflowerblue"></i><a href="mailto:@Model.Email?subject=Payslip&body=Attached" within is your Payslip></a>Send Payslip</p>
                    <br /> <br />
                    <p class="font-weight-bold"> Address </p>
                    <hr style="background-color: crimson" />
                    <p class="font-weight-normal"> @Model.Address</p>
                    <p class="font-weight-normal"> @Model.City</p>
                    <p class="font-weight-normal">@Model.PostalCode</p>
                    <br /> <br />
                </div>
            </div>
        </div>

    </div>

</div>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial ");}
}